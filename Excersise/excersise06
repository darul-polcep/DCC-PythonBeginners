class Car:

	def __init__(self, maxSpeed=0, mileage=0):
		self.maxSpeed = maxSpeed
		self.mileage = mileage
		
	def getMaxSpeed(self):
		return self.maxSpeed
		
	def getMileage(self):
		return self.mileage

# second class	
class Toyota(Car):

	def __init__(self, model=None, color=None):
		self.model = 'Camry'
		self.color = 'Silver'
		
	def getModel(self):
		return self.model
		
	def getColor(self):
		return self.color


	# decorator
	@classmethod
	def getOwner(cls)
		print('This is the owner...')
		
toyo = Toyota("Camry", "Silver")

print(toyo.model)

toyo.maxSpeed = 200

print(toyo.getMaxSpeed())
		
	
